{
  "main": "dist/electron/main.js",
  "name": "electronnote",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "electron .",
    "seed": "ts-node --project tsconfig.seed.json prisma/seed.ts",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "build": "ng build --configuration production && electron-builder",
    "dist": "npm run build && electron-builder",
    "electron-build": "ng build --base-href ./ && electron .",
    "build:electron": "npx tsc --project tsconfig.electron.json",
    "migrate": "npx prisma migrate dev --name init"


  },
  "build": {
    "files": [
      "dist/",
      "electron-main.js",
      "prisma/",                     
      "node_modules/",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "prisma/dev.db",      
        "to": "prisma/dev.db"
      }
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@prisma/client": "^6.8.2",
    "boostrap": "^2.0.0",
    "bootstrap": "^5.3.6",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.0",
    "@angular/cli": "^19.2.0",
    "@angular/compiler-cli": "^19.2.0",
    "@types/jasmine": "~5.1.0",
    "electron": "^36.2.1",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prisma": "^6.8.2",
    "typescript": "~5.7.2"
  }
}
